<div id="user_show">
  <%= image_tag(@user.photo.thumb) if @user.photo? %>

<%= @user.name %>
<%= @user.email %>
<%= link_to "edit", edit_user_path(@user) if @authenticated_user == @user %>
</div>

<ul class='user_products'>
<% @products.each do |product| %>
  <li><%= link_to image_tag(product.photo), product_path(product) %>
	<%= link_to product.name, product_path(product) %></li>
<% end %>
</ul>
