<h1><%= @user.name %>'s page</h1>
<h2><%= @user.email %></h2>
<%= image_tag(@user.photo.thumb) if @user.photo? %>
<h3> <%= link_to "edit", edit_user_path(@user) %> </h3>

<h2>Items</h2>
<ul>
<% @products.each do |product| %>
	<li><%= link_to product.name, product_path(product) %></li>
<% end %>
</ul>

